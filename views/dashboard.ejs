<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Dashboard de Chamados</title>
  <script src="/socket.io/socket.io.js"></script>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    body { font-family: Arial, sans-serif; text-align: center; padding: 20px; background: #f9fafb; }
    header { font-size: 24px; font-weight: bold; margin-bottom: 20px; }
    
    /* Cards gerais */
    .cards { display: flex; justify-content: center; gap: 20px; margin-bottom: 30px; flex-wrap: wrap; }
    .card {
      flex: 1;
      min-width: 180px;
      padding: 20px;
      border-radius: 10px;
      color: #fff;
      font-weight: bold;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .card-atendimento { background: #2ecc71; }
    .card-chamado { background: #e74c3c; }
    .card-livre { background: #3498db; }

    /* Grid de salas */
    .dashboard-grid {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
      max-width: 1000px;
      margin: 0 auto;
    }
    .card-sala {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 160px;
      height: 140px;
      border-radius: 10px;
      color: #fff;
      font-weight: bold;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      padding: 10px;
    }
    .card-sala h3 { margin: 0; font-size: 18px; }
    .card-sala p { margin: 5px 0; font-size: 14px; }
    .card-sala button {
      margin-top: 8px;
      padding: 6px 12px;
      border-radius: 6px;
      border: none;
      cursor: pointer;
      background: #fff;
      color: #333;
      font-weight: bold;
      transition: 0.2s;
    }
    .card-sala button:hover { background: #eee; }
    
    /* Cores e animação */
    .card-sala.livre { background: #2ecc71; }
    .card-sala.chamado { background: #e74c3c; animation: piscar 1s infinite; }
    @keyframes piscar {
      0% { filter: brightness(1); }
      50% { filter: brightness(0.85); }
      100% { filter: brightness(1); }
    }
  </style>
</head>
<body>
  <header>Dashboard de Chamados</header>

  <div class="cards">
    <div class="card card-atendimento">
      <h2><%= Object.values(salas).filter(s => s.status === 'livre').length %></h2>
      <p>Salas livres</p>
    </div>
    <div class="card card-chamado">
      <h2><%= Object.values(salas).filter(s => s.status === 'chamado').length %></h2>
      <p>Chamados ativos</p>
    </div>
    <div class="card card-livre">
      <h2><%= Object.keys(salas).length %></h2>
      <p>Total de salas</p>
    </div>
  </div>

  <div class="dashboard-grid">
    <% for (let sala in salas) { %>
      <div class="card-sala <%= salas[sala].status %>">
        <h3><%= sala %></h3>
        <p>Status: <%= salas[sala].status %></p>
        <p>Chamado: <%= salas[sala].tipo || '-' %></p>
        <% if (salas[sala].status === 'chamado') { %>
          <form method="POST" action="/atender/<%= sala.split(' ')[1] %>" style="margin:0;">
            <button type="submit">Atender</button>
          </form>
        <% } %>
      </div>
    <% } %>
  </div>

  <audio id="som" src="https://actions.google.com/sounds/v1/alarms/beep_short.ogg" preload="auto"></audio>

  <script>
    const socket = io();
    socket.on("atualizar", function(data) {
      const div = document.querySelector(".card-sala h3:contains('" + data.sala + "')")?.parentElement;
      if (!div) return;
      div.className = "card-sala " + data.status;
      div.querySelector("p:nth-of-type(2)").innerText = "Chamado: " + (data.tipo || "-");
      if (data.status === "chamado") {
        const som = document.getElementById("som");
        if (som) { som.currentTime = 0; som.play().catch(()=>{}); }
      }
    });
  </script>
</body>
</html>
